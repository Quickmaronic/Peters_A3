@model Peters_A3.Models.OrderOption
@{
    ViewBag.Title = "Delete";
}

<h2>Delete Order Option</h2>

@using (Html.BeginForm("Delete", "OrderOptions", FormMethod.Post))
{
    <h3>Are you sure you want to delete this order option?</h3>
    @Html.HiddenFor(o => o.SalesTaxRate, new { @class = "form-control" })
    @Html.HiddenFor(o => o.FirstBookShipCharge, new { @class = "form-control" })
    @Html.HiddenFor(o => o.AdditionalBookShipCharge, new { @class = "form-control" })

    <input type="submit" value="Submit" class="btn btn-info" />
    <input type="button" value="Cancel" class="btn btn-info" onClick="window.location.href='/OrderOptions/OrderOptions'" />
}