@model Peters_A3.Models.InvoiceLineItem
@{
    ViewBag.Title = "Delete";
}

<h2>Delete Line Item</h2>

@using (Html.BeginForm("Delete", "InvoiceLineItems", FormMethod.Post))
{
    <h3>Are you sure you want to delete this line item?</h3>
    @Html.HiddenFor(i => i.InvoiceID, new { @class = "form-control" })
    @Html.HiddenFor(i => i.ProductCode, new { @class = "form-control" })
    @Html.HiddenFor(i => i.UnitPrice, new { @class = "form-control" })
    @Html.HiddenFor(i => i.Quantity, new { @class = "form-control" })
    @Html.HiddenFor(i => i.ItemTotal, new { @class = "form-control" })

    <input type="submit" value="Submit" class="btn btn-info" />
    <input type="button" value="Cancel" class="btn btn-info" onClick="window.location.href='/InvoiceLineItems/InvoiceLineItems'" />
}