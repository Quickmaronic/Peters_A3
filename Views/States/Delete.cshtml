@model Peters_A3.Models.State
@{
    ViewBag.Title = "Delete";
}

<h2>Delete State</h2>

@using (Html.BeginForm("Delete", "States", FormMethod.Post))
{
    <h3>Are you sure you want to delete this State?</h3>
    @Html.HiddenFor(s => s.StateCode, new { @class = "form-control" })
    @Html.HiddenFor(s => s.StateName, new { @class = "form-control" })

    <input type="submit" value="Submit" class="btn btn-info" />
    <input type="button" value="Cancel" class="btn btn-info" onClick="window.location.href='/States/States'" />
}